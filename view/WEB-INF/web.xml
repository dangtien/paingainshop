<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
    <display-name>paingainshop</display-name>
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
        <welcome-file>index.htm</welcome-file>
        <welcome-file>index</welcome-file>
        <welcome-file>default.html</welcome-file>
        <welcome-file>default.htm</welcome-file>
        <welcome-file>default.jsp</welcome-file>
    </welcome-file-list>
<!-- servlet-->
    <servlet>
        <servlet-name>Index</servlet-name>
        <servlet-class>paingainshop.controller.LoadIndex</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoadDanhSachHangHoa</servlet-name>
        <servlet-class>paingainshop.controller.LoadDanhSachHangHoa</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>addHoaDon</servlet-name>
        <servlet-class>paingainshop.controller.addHoaDon</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>paingainshop.controller.Login</servlet-class>
    </servlet>
<!--  servlet manpping-->
    <servlet-mapping>
        <servlet-name>Index</servlet-name>
        <url-pattern>/index</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoadDanhSachHangHoa</servlet-name>
        <url-pattern>/danhsach</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>addHoaDon</servlet-name>
        <url-pattern>/createhoadon</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
</web-app>
